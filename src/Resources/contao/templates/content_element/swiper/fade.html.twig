{% extends "@Contao/content_element/swiper.html.twig" %}

{# Added keyboard Navigation and fade effect #}

{% block init_options %}
  pagination: {
      el: '.swiper-pagination',
      clickable: true,
  },
  navigation: {
      prevEl: '.swiper-button-prev',
      nextEl: '.swiper-button-next',
  },
  keyboard: {
    enabled: true,
  },
  effect: 'fade',
	watchSlidesProgress: 'true',
{% endblock %}
